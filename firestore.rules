rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /contact_form_submissions/{submissionId} {
      // Allow anyone to create a submission
      allow create: if true;

      // Only authenticated users can read/list submissions
      allow get, list: if request.auth != null;

      // Allow authenticated users to update the status field, ensuring other fields are untouched.
      allow update: if request.auth != null 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
      
      // Nobody can delete submissions from the client
      allow delete: if false;

      match /notes/{noteId} {
        // Only authenticated users can manage notes
        allow read, list, create: if request.auth != null;
        allow update, delete: if request.auth != null;
      }
    }
    
    match /call_requests/{requestId} {
      // Allow anyone to create a request
      allow create: if true;
      
      // Only authenticated users can read/list requests
      allow get, list: if request.auth != null;
      
      // Allow authenticated users to update the status field, ensuring other fields are untouched.
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
      
      // Nobody can delete requests from the client
      allow delete: if false;

      match /notes/{noteId} {
        // Only authenticated users can manage notes
        allow read, list, create: if request.auth != null;
        allow update, delete: if request.auth != null;
      }
    }

    match /tasks/{taskId} {
      // Only authenticated users can manage tasks
      allow read, list, create, update, delete: if request.auth != null;

      match /notes/{noteId} {
        // Only authenticated users can manage notes
        allow read, list, create: if request.auth != null;
        allow update, delete: if request.auth != null;
      }
    }

    match /internal_tasks/{taskId} {
      // Only authenticated users can manage tasks
      allow read, list, create, update, delete: if request.auth != null;

      match /notes/{noteId} {
        // Only authenticated users can manage notes
        allow read, list, create: if request.auth != null;
        allow update, delete: if request.auth != null;
      }
    }

    match /users/{userId} {
      // Allow authenticated users to read the list of users for assignment
      allow get, list: if request.auth != null;

      // Disallow client-side writes to maintain data integrity
      allow create, update, delete: if false;
    }
  }
}
